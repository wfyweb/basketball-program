.card-goods {
  padding: 10px 0;
  background-color: #fff;
}

.card-goods__item {
  position: relative;
  background-color: #fafafa;
  --checkbox-checked-icon-color: #ee0a24;
}

.card-goods__item .van-checkbox__label {
  width: 100%;
  height: auto;
  padding: 0 10px 0 15px;
  box-sizing: border-box;
}

.card-goods__item .van-checkbox__icon {
  top: 50%;
  left: 10px;
  z-index: 1;
  position: absolute;
  margin-top: -10px;
}

.card-goods__item .van-card__price {
  color: #f44;
}
.container{
  width: 100%;
  padding: 15px;
  box-sizing: border-box;
}

.item{
  width: 100%;
  background: #fff;
  box-shadow:0px 0px 3px rgb(116, 114, 114);
  border-radius: 5px;
  padding: 5px;
  box-sizing: border-box;
  margin-bottom: 20px;
}
.row{
  display: flex;
  font-size: 14px;
  padding: 3px;
}
.lable{
  padding-right: 5px;
}
.state{
  color: #646566;
  flex: 1;
  text-align: right;
  padding-right: 10px;
}
.state-button{
  /* width: 50px; */
  margin-left: 10px;
}